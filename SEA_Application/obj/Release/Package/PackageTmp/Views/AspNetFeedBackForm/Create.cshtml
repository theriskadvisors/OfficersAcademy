@model SEA_Application.Models.AspNetFeedBackForm
@{
    ViewBag.Title = "Create";
}
<script src="~/AdminLTE/selectone.js"></script>
<script>

    $(document).ready(function () {

        $("#Question").prop('required', true);
        $("#FormFor").prop('required', true);

    });

</script>

<label>@Html.ActionLink("Home", "Dashboard", "Account") > @Html.ActionLink("Parent Teacher Meeting", "Index", "AspNetParentTeacherMeetings") > <a href="#">Feed back form</a> > <a href="#"><b>Create</b></a> </label>

<h4 class="orange">Add @ViewBag.data Question &nbsp;</h4>
<div class="box box-primary">
    <div class="box-title"></div>
    <div class="box-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Feedback Form</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "control-label col-md-1 col-lg-1" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-1 col-lg-1">Form For</label>
                    <div class="col-md-6">
                        @Html.DropDownList("FormFor", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FormFor, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-lg-offset-1 col-md-2">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <button class="btn btn-default" onclick="window.location.href = '/AspNetFeedBackForm/ParentForm'">Cancel</button>
                    </div>
                 
                </div>
            </div>
        }
        </div>
</div>

      