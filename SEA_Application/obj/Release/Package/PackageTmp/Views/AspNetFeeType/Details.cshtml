@model SEA_Application.Models.AspNetFeeType
@{
    ViewBag.Title = "Edit";
}
<label>@Html.ActionLink("Home", "Dashboard", "Account") > <a href="#" class="sidebar-toggle navigate" data-toggle="offcanvas" style="background-color:#F7F7F7 !important">User</a> > @Html.ActionLink("Fee Type", "Index", "AspNetFeeType") > <a href="#"><b>Details</b></a> </label>
<h4>Fee Detail</h4>
<script>
            $(document).ready(function () {
                $('input').prop('disabled', true);
                $('select').prop('disabled', true);
            })
</script>



<div class="box box-primary">
    <div class="box-body ">

            <div class="form-horizontal">
                <h4>Fee Type</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    <label class="control-label col-md-1"> Ledger</label>
                    <div class="col-md-6">
                        @Html.DropDownList("LedgerID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LedgerID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-1">
                        <button class="btn btn-default" onclick="window.location.href = 'Index'">Back</button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-primary" onclick="Edit()">Edit</button>
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-default" onclick="Delete()">Delete</button>
                    </div>
                </div>
                <div class="col-md-offset-2 col-md-4">
                    @if (ViewBag.Error != null)
                    {
                        <span class="text-danger">@ViewBag.Error</span>

                    }
                </div>

            </div>
        
    </div>
</div>
<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Complete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you really want to disable this ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="cnfmDisable()">Confirm</button>
            </div>
        </div>
    </div>
</div>
<script>
    function Edit() {
        window.location.href = "Edit?id=@Model.Id";
    }

    function Delete() {
        window.location.href = "Delete?id=@Model.Id";
    }
    function cnfmDisable() {
        var id = $("#Id").val();
        window.location.href = "/AspNetFeeType/DeleteCnfm?id=" + id;
    }
    function Delete() {
        $("#myModal1").modal('show');
    }
</script>