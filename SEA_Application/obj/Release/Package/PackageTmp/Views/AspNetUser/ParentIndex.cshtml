    function subFun(selectedClass) {
        $.get('@Url.Action("SubjectsParentsByClass", "AspNetUser")',
            { id: selectedClass }, function (data) {
                //alert(JSON.stringify(data));
                $('#subjects').html('');
                $('#subjects').prop('disabled', false);
                $.each(data.Subjects, function (i, item) {
                    $('#subjects').append('<option value=' + item.id + '>' + item.Subjectname + '</option>');
                });

                table.fnClearTable();
                $.each(data.Students, function (i, item) {
                    $('#example').dataTable().fnAddData([item.Name, item.RollNo, item.Email, item.ClassName]);
                });

                if (selectedClass == 0) {
                    $('#View').html("View Default");
                } else {
                    $('#View').html("View Filtered");
                }

            });
    }

    function Parents() {
        $.get('@Url.Action("AllParents", "AspNetUser")',
            function (data) {

                table.fnClearTable();
                $.each(data, function (i, item) {
                    if (item.PhoneNumber == null) { item.PhoneNumber = "-"; }
                    table.fnAddData([item.Name, item.UserName, item.Email, item.ChildName]);
                });
                table.fnDraw();
                $('#View').html("View Default");
            });
    }

