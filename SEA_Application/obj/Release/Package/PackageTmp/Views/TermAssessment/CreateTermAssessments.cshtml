
@{
    ViewBag.Title = "CreateTermAssessment";
    
}
<h4>Create Term Assessment</h4>
<div class="box box-primary">
    <div class="box-body">
        @using (Html.BeginForm("CreateTermAssessments", "TermAssessment"))
        {
            @Html.AntiForgeryToken()

            <div class="forms form-horizontal">
                <hr />
                <form class="forms form-horizontal">
                    <div class="form-group">
                        <lable class="col-md-1 col-lg-1 control-label">Select Term</lable>
                        <div class="col-md-6">
                            @Html.DropDownList("TermID", null, htmlAttributes: new { @class = "form-control", name = "term" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-lg-offset-1 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        }
        <div class="col-md-offset-2 col-md-10">
            @if (ViewBag.term == "true")
            {
                <p class="success">Term Successfully started </p>
            }
            else
            {
                <p class="danger">Term has already started. Please add a new seesion to start a new term.</p>}
        </div>
    </div>
</div>