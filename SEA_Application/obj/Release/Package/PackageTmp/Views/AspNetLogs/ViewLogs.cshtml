                <table class="table table-striped table-bordered" id="example">
                    <thead>
                        <tr>
                            <th>
                                Operation
                            </th>
                            <th>
                                Time
                            </th>
                        </tr>                        
                    </thead>
                    <tbody id="Log_Table"></tbody>
                </table>
            </section>
            </div></div>
</body>
</html>




