                <span class="info-box-text">Notifications</span>
                <span class="info-box-number">@ViewBag.TotalNotifications</span>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>
