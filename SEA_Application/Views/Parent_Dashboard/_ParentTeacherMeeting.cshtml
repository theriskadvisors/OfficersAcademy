
<script type="text/javascript">
    $(document).ready(function () {
        $("#SubjectID").click(function () {
            var selectedSubject = $('#SubjectID').val();

            $.get('@(Url.Action("ParentFeedback", "AspNetPTM_ParentFeedback"))',
              { SubjectID: selectedSubject }, function (data) {
                  $("#partial").html(data);
              });
        });
    });
</script>
<label>@Html.ActionLink("Home", "Dashboard", "Account") >  <b><a href="#">Parent Teacher Meeting</a></b></label>
<h4 class="orange">PTM Evaluation</h4>


<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <form class="form-horizontal">
            <div class="box-body">

                <div class="form-group">
                    <lable class="col-md-2 col-lg-1 control-label"><b>Select Subject</b></lable>
                    <div class="col-md-4">
                        @Html.DropDownList("SubjectID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div id="partial">
</div>
