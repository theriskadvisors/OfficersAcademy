@model SEA_Application.Models.NonRecurringMonth

@{
    ViewBag.Title = "Edit";
}
<script>
    $(document).ready(function () {
        var na = $('#STATUS').val();
        debugger;
        if (na == "Pending") {
            $('#statusid option[value="' + 'Pending' + '"]').prop('selected', true);
        }
        else {
            $('#statusid option[value="' + 'Clear' + '"]').prop('selected', true);

        }
    })
</script>
<h2>Edit</h2>
<div class="box box-primary">
    <div class="box-body">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "Registerform" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>NonRecurring Month</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <span class="col-md-2">Student Name</span>
                    <div class="col-md-6">
                        @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control",@readonly="readonly" })
                        @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2">Months</span>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Months, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Months, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2">Status</span>
                    <div class="col-md-6">
                        <input type="hidden" value="@Model.Status" id="STATUS" />
                        <select name="status" class="form-control" onchange="DISABLE()" id="statusid">
                            <option value="Pending">Pending</option>
                            <option value="Clear">Clear</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2">Instalment Amount</span>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.InstalmentAmount, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.InstalmentAmount, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2">Issue Date</span>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.IssueDate, new { htmlAttributes = new { @class = "form-control",@type="date",@readonly="readonly" } })
                        @Html.ValidationMessageFor(model => model.IssueDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <span class="col-md-2">Submit Date</span>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        }
        <div class="col-md-offset-2 col-md-5">
            <br />
            <button class="col-md-2 form-control" onclick="window.location.href = '/NonRecurringMonths/Index'" style="border-radius:35px;border:hidden;background-color:red;margin-right:10px;color:white;font-size:11px;width:98px;height:38px;font-family:Montserrat" id="return"><i class="fa fa-arrow-left"></i> &nbsp;&nbsp; Return</button>
            <input class="col-md-2 form-control" id="submit" form="Registerform" type="submit" value="Save" style="border-radius:35px;color:white;border:hidden;background-color:#128edb;font-size:11px;width:98px;height:38px;font-family:Montserrat" />
            <br />
            <br /><br />
        </div>
    </div>
</div>

