
@{
    ViewBag.Title = "Att_Details";
}

<script type="text/javascript">
    var table;
    var roll=@ViewBag.username;
    $(document).ready(function(){
        table=  $('#example').dataTable();
        $('.eeniart0017').css("display", "block");
        $.ajax({
            type: "POST",
            url: "/Admin_Dashboard/GetAttendance_Details",
            data: { RollNumber:roll},
            success: function (data) {
                $('.eeniart0017').css("display", "none");

                debugger;
                var std=data.std;
                var name=data.name;
                table.fnClearTable();
                $.each(std, function (i, item) {
                    debugger;
                    var ab="-";
                    if (item.Date != null) {
                        var time = item.Date;
                        var startsplit = time.split('(')[1];
                        var endsplit = startsplit.split(')')[0];
                        var endsp = parseInt(endsplit);
                        var d = new Date(endsp);
                        ab = d.toLocaleDateString();
                    }
                    debugger;
                    var timein = "-";
                    if(item.TimeIn!=null)
                    {
                        var tin = item.TimeIn;
                        var h = tin.Hours;
                        var m = tin.Minutes;
                        var s = tin.Seconds;
                        timein = h + ':' + m + ':' + s;
                    }
                    var timeout="-";
                    if (item.TimeOut != null) 
                    {
                        var tout = item.TimeOut;
                        var hh = tout.Hours;
                        var mm = tout.Minutes;
                        var ss = tout.Seconds;
                        timeout = hh + ':' + mm + ':' + ss;
                        
                    }
                    table.fnAddData([name, item.Class, ab, item.Roll_Number, timein, timeout]);
                })
            }
        });

        drawTable();
    })
    function DateFilter()
    {
        debugger;
        var value = $("#status").val();
        var username=roll;
        var start=$("#startdate").val();
        var end=$("#enddate").val();
        if (start == "" && end!="")
        {
            $("#starte").html('');
            $("#starte").append("Please select a start date");
        }
       else if (end == "" && start!="")
        {
            $("#ende").html('');
            $("#ende").append("Please select an end date");
       }
       else if(start=="" && end==""){
           
            $("#message").html('');
            $("#message").append("Please select Start and End date");
       }
        else
        {
            $.ajax({
                type: "POST",
                url: "/Admin_Dashboard/Start_End_Date",
                data: { RollNumber:username,status:value,start:start,end:end},
                success: function (data) {
                    debugger;
                    table.fnClearTable();
                    var std=data.attendance;
                    var name=data.name; 
                    $.each(std, function (i, item) {
                        debugger;
                        var ab = "-";
                        if (item.Date != null) {
                            var time = item.Date;
                            var startsplit = time.split('(')[1];
                            var endsplit = startsplit.split(')')[0];
                            var endsp = parseInt(endsplit);
                            var d = new Date(endsp);
                            ab = d.toLocaleDateString();
                        }
                        var timein = "-";
                        if(item.TimeIn!=null)
                        {
                            var tin = item.TimeIn;
                            var h = tin.Hours;
                            var m = tin.Minutes;
                            var s = tin.Seconds;
                            timein = h + ':' + m + ':' + s;
                        }
                        var timeout="-";
                        if (item.TimeOut != null) 
                        {
                            var tout = item.TimeOut;
                            var hh = tout.Hours;
                            var mm = tout.Minutes;
                            var ss = tout.Seconds;
                            timeout = hh + ':' + mm + ':' + ss;
                        
                        }
                        table.fnAddData([name, item.Class, ab, item.Roll_Number, timein, timeout]);
                    })
                }
            })

        }
    }
    function Status()
    {
        debugger;
        var value = $("#status").val();
        var username=roll;
        $.ajax({
            type: "POST",
            url: "/Admin_Dashboard/Std_Status_Details",
            data: { RollNumber:roll,status:value},
            success: function (data) {
                debugger;
                var absent=data.attendance;
                var name=data.name;
                table.fnClearTable();
                $.each(absent, function (i, item) {
                    debugger;
                  
                    var ab = "-";
                    if (item.Date != null) {
                        var time = item.Date;
                        var startsplit = time.split('(')[1];
                        var endsplit = startsplit.split(')')[0];
                        var endsp = parseInt(endsplit);
                        var d = new Date(endsp);
                        ab = d.toLocaleDateString();
                    }
                    var timein = "-";
                    if(item.TimeIn!=null)
                    {
                        var tin = item.TimeIn;
                        var h = tin.Hours;
                        var m = tin.Minutes;
                        var s = tin.Seconds;
                        timein = h + ':' + m + ':' + s;
                    }
                    var timeout="-";
                    if (item.TimeOut != null) 
                    {
                        var tout = item.TimeOut;
                        var hh = tout.Hours;
                        var mm = tout.Minutes;
                        var ss = tout.Seconds;
                        timeout = hh + ':' + mm + ':' + ss;
                        
                    }
                    table.fnAddData([name, item.Class, ab, item.Roll_Number, timein, timeout]);
                })
            }
        })

    }
   
