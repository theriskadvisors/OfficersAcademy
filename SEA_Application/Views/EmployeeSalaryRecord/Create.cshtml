@model SEA_Application.Models.EmployeeSalary
@{ ViewBag.Title = "Index";
 Layout = "~/Views/Shared/_AccountantDashboardLayout.cshtml"; }
<h2>Create Salary</h2>


<script>

    $(document).on('click', '#btn-save', function () {
        debugger;
        $('.eeniart0017').css("display", "block");

        $.post("/EmployeeSalaryRecord/AddRecord",
                      $(".frmEmployer").serialize(),
                      function (value) {
                          $('.eeniart0017').css("display", "none");

                          if (value == 'success') {
                              debugger;
                              toastr.success('Success ! Salary Added.')
                          }
                          else if (value == "AlreadyExists") {
                              // AlreadyExists
                              toastr.error('Error ! Salary Already Created.')
                          }
                      },
                      "text"
                  );
    });

</script>
<div class="box box-primary">
    <div class="box-body">
        <form class="frmEmployer">
            <div class="form-horizontal">
                <h4>Create Salary</h4>
                <hr />
                <div class="form-group">
                    <span class="col-md-2">Name</span>
                    <div class="col-md-6">
                        @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "form-control", @id = "EmployeeId" })
                    </div>
                </div>
                <div class="form-group">
                    <span class="col-md-2">Starting Salary</span>
                    <div class="col-md-6">
                        <input class="form-control" type="text" name="StartingSalary" id="StartingSalary" />
                    </div>
                </div>
            </div>
        </form>
        <div class="col-md-offset-2 col-md-5">
            <br />
            <button class="col-md-2 form-control" onclick="window.location.href = '/EmployeeSalaryRecord/Index'" style="border-radius:35px;border:hidden;background-color:red;margin-right:10px;color:white;font-size:11px;width:98px;height:38px;font-family:Montserrat" id="return"><i class="fa fa-arrow-left"></i> &nbsp;&nbsp; Return</button>

                 <input class="col-md-2 form-control" id="btn-save" type="submit" value="Save" style="border-radius:35px;color:white;border:hidden;background-color:#128edb;font-size:11px;width:98px;height:38px;font-family:Montserrat" />
       
               <br />
            <br /><br />
        </div>
    </div>
</div>


