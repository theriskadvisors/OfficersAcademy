@model SEA_Application.Models.AspNetFeedBackForm

@{
    ViewBag.Title = "Edit";
}
<label>@Html.ActionLink("Home", "Dashboard", "Account") > <a href="#" class="sidebar-toggle navigate" data-toggle="offcanvas" style="background-color:#F7F7F7 !important">User</a> > @Html.ActionLink("Parent Teacher Meeting", "Index", "AspNetParentTeacherMeetings") > <a><b>FeedBack Form</b></a> </label>
<h4>Edit</h4>

<div class="box box-primary">
    <div class="box-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>FeedBack Form</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <label class="control-label col-md-1 col-lg-1">Question:</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-1 col-lg-1">Form For:</label>
                    <div class="col-md-6">
                        @Html.DropDownList("FormFor", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FormFor, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-lg-offset-1 col-md-6">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <button class="btn btn-default" onclick=" window.location.href = '/AspNetFeedBackForm/ParentForm'">Back</button>
                    </div>
                    
                </div>
               
            </div>
        }
       
    </div>
</div>

