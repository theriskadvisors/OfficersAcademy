@model SEA_Application.Models.AspNetFeedBackForm
@{
    ViewBag.Title = "Edit";
}

<script>
    $(document).ready(function () {
        $('input').prop('disabled', true)
        $('select').prop('disabled', true)
    });
    function Edit()
    {
        var id = $("#Id").val();
        window.location.href = '/AspNetFeedBackForm/Edit?id=' + id;
    }

    function Delete() {
        $("#myModal1").modal('show');
    }
    function cnfmDisable() {
        var id = $("#Id").val();
        window.location.href = "/AspNetFeedBackForm/DeleteCnfm?id=" + id;
    }
</script>

