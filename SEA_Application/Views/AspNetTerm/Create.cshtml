<label>@Html.ActionLink("Home", "Dashboard", "Account") > <a href="#" class="sidebar-toggle navigate" data-toggle="offcanvas" style="background-color:#F7F7F7 !important">Academics</a> > @Html.ActionLink("Term", "Index", "AspNetTerm") > <a href="#"><b>Create</b></a> </label>
<div class="box box-primary">
    <div class="box-body">
        @model SEA_Application.Models.AspNetTerm
        @{
            ViewBag.Title = "Create";
            if (ViewBag.Error == "" || ViewBag.Error == null)
            {
                ViewBag.Error = "";
            }

            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "Active",
                Value = "Active"
            });
            listItems.Add(new SelectListItem
            {
                Text = "InActive",
                Value = "InActive",
            });

        }
        <script>
            $(document).ready(function () {

                $("#TermName").prop('required', true);
                $("#SessionID").prop('required', true);
                $("#TermStartDate").prop('required', true);
                $("#TermStartDate").prop('type', "date");
                $("#TermEndDate").prop('required', true);
                $("#TermEndDate").prop('type', "date");
                $("#Status").prop('required', true);


                $('#cancel').click(function () {
                    window.location.href = 'Index';
                });
            });

        </script>
        <h4 class="orange">Create Term &nbsp; </h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            if (ViewBag.Error == "")
            {
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="col-md-1 col-lg-1 control-label" for="UserName">Term Name: <span class="red-mark">*</span></label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.TermName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TermName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-1 col-lg-1 control-label" for="UserName">Session ID: <span class="red-mark">*</span></label>
                        <div class="col-md-6">
                            @Html.DropDownList("SessionID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SessionID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1 col-lg-1 control-label" for="UserName">Term Start Date: <span class="red-mark">*</span></label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.TermStartDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TermStartDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1 col-lg-1 control-label" for="UserName">Term End Date: <span class="red-mark">*</span></label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.TermEndDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TermEndDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1 col-lg-1 control-label" for="UserName">Status: <span class="red-mark">*</span></label>
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.Status, listItems, new { @class = "form-control" } )
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-offset-1 col-lg-offset-1 col-md-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <button type="button" id="cancel" class="btn btn-default">Cancel</button>
                        </div>

                    </div>
                </div>
            }
            else
            {
                @ViewBag.Error;
            }
        }

    </div>
</div>
