<label>@Html.ActionLink("Home", "Dashboard", "Account") >  <a href="#"><b>Term</b></a></label>
<h4>View Term</h4>

@if (ViewBag.Error != null)
{
    <div class="box-alert" id="work" >
        @ViewBag.Error
    </div>
}

<div class="box box-primary">
    <div class="box-body">
        <table class="table" id="example">
            <thead>
                <tr>
                    <th>
                        Term Name
                    </th>
                    <th>
                        Term Start Date
                    </th>
                    <th>
                        Term End Date
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        Session Name
                    </th>
                </tr>                
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TermName)
                            <input type="hidden" value="@item.Id" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TermStartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TermEndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => item.AspNetSession.SessionName)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div></div>