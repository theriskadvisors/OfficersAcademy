    <span style="color:red">@ViewBag.Error</span>
}
<div class="col-md-8 col-md-offset-1" style="background-color:#f1f2e5;border-radius:10px;margin-top:50px;box-shadow: rgba(0, 0, 0, 0.16) 5px 10px 5px, rgba(0, 0, 0, 0.23) 0px 3px 5px">
 @using (Html.BeginForm("NewBankAccount", "Ledgers", FormMethod.Post, new { enctype = "multipart/form-data",id= "Registerform" }))
 {
      <h4 style="font-family:Montserrat">Add New Bank Account</h4>
      <hr />
<br />
    <div class="col-md-12">
        <div
             class="col-md-3">
            <span >Name</span>
            <input type="text" name="name" class="form-control" required />
            <br />
        </div>
     </div>
    <div class="col-lg-12">
        <div class="col-md-3">
            <span>Starting Balance</span>
            <input type="number" name="startingbalance" class="form-control" id = "startingbalance" />
            <div class="error" id="error-tag">Balance must be greater than 0</div>

             <br />
        </div>
    </div>
  <div class="col-md-12">
      <div class="col-md-3">
          <span>Group</span>
          @Html.DropDownList("LedgerGroupId", null, htmlAttributes: new { @class = "form-control",@style="font-family:Montserrat" })
          <br />
      </div>
  </div>
    <div class="col-md-12">
        <div class="col-md-3">
            <span>Session</span>
            @Html.DropDownList("SessionId", null, htmlAttributes: new { @class = "form-control", @required = "required", @style = "font-family:Montserrat" })
            <br />
        </div>
    </div>


 }
        <div class="col-md-5">
