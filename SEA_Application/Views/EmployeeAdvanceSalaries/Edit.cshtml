@model SEA_Application.Models.EmployeeAdvanceSalary

@{
    ViewBag.Title = "Edit";
}
<script>
    $(document).ready(function () {
        var na = $('#STATUS').val();
        debugger;
        if (na == "Pending") {
            $('#statusid option[value="' + 'Pending' + '"]').prop('selected', true);
        }
        else {
            $('#statusid option[value="' + 'Clear' + '"]').prop('selected', true);

        }
    })
</script>
<h2>Edit</h2>
<div class="box box-primary">
    <div class="box-body">
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "Registerform" }))
{
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4> Advance Salary</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <span class="col-md-2">Name</span>
                    <div class="col-md-6">
                        @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2">Advance Salary</span>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AdvanceSalary, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AdvanceSalary, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2">Month</span>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Months, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Months, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2">Date</span>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control",@type="date" } })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2">Status</span>

                    <div class="col-md-6">
                        <input type="hidden" value="@Model.Status" id="STATUS" />
                        <select name="status" class="form-control" onchange="DISABLE()" id="statusid">
                            <option value="Pending">Pending</option>
                            <option value="Clear">Clear</option>
                        </select>
                    </div>
                </div>

                @*<div class="form-group">
                    <span class="col-md-2">Session</span>
                    <div class="col-md-6">
                        @Html.DropDownList("SessionId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SessionId, "", new { @class = "text-danger" })
                    </div>
                </div>*@                
            </div>
        }
        <div class="col-md-offset-2 col-md-5">
            <br />
            <button class="col-md-2 form-control" onclick="window.location.href = '/EmployeeAdvanceSalaries/Index'" style="border-radius:35px;border:hidden;background-color:red;margin-right:10px;color:white;font-size:11px;width:98px;height:38px;font-family:Montserrat" id="return"><i class="fa fa-arrow-left"></i> &nbsp;&nbsp; Return</button>
            <input class="col-md-2 form-control" id="submit" form="Registerform" type="submit" value="Save" style="border-radius:35px;color:white;border:hidden;background-color:#128edb;font-size:11px;width:98px;height:38px;font-family:Montserrat" />
            <br />
            <br /><br />
        </div>
    </div>
</div>
