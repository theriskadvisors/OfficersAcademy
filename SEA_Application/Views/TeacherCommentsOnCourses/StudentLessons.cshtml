            data.append('LessonID', LessonId);

            if (fileUpload.length > 0) {
                data.append("file", fileUpload[0]);
            }
            $.ajax({
                type: "POST",
                url: "/TeacherCommentsOnCourses/StudentAssignmentSubmission",
                contentType: false,
                processData: false,
                data: data,
                success: function (message) {

                    window.location.href = "/TeacherCommentsOnCourses/Index";


