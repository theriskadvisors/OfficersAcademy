@model SEA_Application.Models.AspNetSalary

@{
    ViewBag.Title = "Edit";
}
<label>@Html.ActionLink("Home", "Dashboard", "Account") > <a href="#" class="sidebar-toggle navigate" data-toggle="offcanvas" style="background-color:#F7F7F7 !important">Accounts Management</a> > @Html.ActionLink("Salaries", "Index", "AspNetSalaries") > <a href="#"><b>Detail</b></a> </label>

<h4>Details</h4>
<script>
    $(document).ready(function () {
        $('#input').prop('disabled', true)
        $('input').prop('disabled', true);
        $('select').prop('disabled', true);
    });
    function BACK()
    {
        window.location.href = 'Index';
    }
    function Edit()
    {
        var id = $('#Id').val();
        window.location.href = '/AspNetSalaries/Edit?id=' + id;
    }
    function Delete() {
        $("#myModal1").modal('show');
    }
    function cnfmDisable() {
        var id = $("#Id").val();
        window.location.href = "/AspNetSalaries/DeleteCnfm?id=" + id;
    }

</script>
<div class="box box-primary">
    <div class="box-body">

       
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Salary</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Month, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Month, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Virtual Role</label>
                    <div class="col-md-6">
                        @Html.DropDownList("VirtualRoleID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VirtualRoleID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-1">
                        <button onclick="BACK()" class="btn btn-danger">Back</button>
                    </div>
                    <div class="col-md-1">
                        <button onclick="Edit()" class="btn btn-primary">Edit</button>
                    </div>
                    <div class="col-md-1">
                        <button onclick="Delete()" class="btn btn-danger">Delete</button>
                    </div>
                </div>
                <div class="col-md-offset-2 col-md-4">
                    @if (ViewBag.Error != null)
                    {
                        <span class="text-danger">@ViewBag.Error</span>

                    }
                </div>

            </div>
        


    </div>
</div>
<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Complete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you really want to disable this ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="cnfmDisable()">Confirm</button>
            </div>
        </div>
    </div>
</div>