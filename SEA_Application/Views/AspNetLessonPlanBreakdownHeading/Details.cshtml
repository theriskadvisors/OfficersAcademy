@model SEA_Application.Models.AspNetLessonPlanBreakdownHeading
<label>@Html.ActionLink("Home", "Dashboard", "Account") > <a href="#" class="sidebar-toggle navigate" data-toggle="offcanvas" style="background-color:#F7F7F7 !important">User</a> > @Html.ActionLink("BreakDownHeading", "Index", "AspNetLessonPlanBreakdownHeading") > <a href="#"><b>Detail</b></a> </label>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script>
        $(document).ready(function () {
            $('input').prop('disabled', true)
        });
        function Edit()
        {
            var id = $('#Id').val();
            window.location.href = '/AspNetLessonPlanBreakdownHeading/Edit?id=' + id;
        }
        function Delete() {
            $("#myModal1").modal('show');
        }
        function cnfmDisable() {
            var id = $("#Id").val();
            window.location.href = "/AspNetLessonPlanBreakdownHeading/DeleteCnfm?id=" + id;
        }
    </script>
</head>
<body>
    <h4>Details </h4>
    <div class="box box-primary">
        <div class="box-body">


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Lesson Plan </h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label class="control-label col-md-2">BreakDown Heading Name</label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.BreakDownHeadingName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BreakDownHeadingName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-1">
                    <button type="submit" value="Back" onclick="window.location.href='Index'" class="btn btn-danger" >Back</button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-1">
                    <button type="submit" value="Back" onclick="Edit();" class="btn btn-primary">Edit</button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-1">
                    <button type="submit" value="Back" onclick="Delete();" class="btn btn-danger">Delete</button>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Complete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you really want to delete this student?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="cnfmDisable()">Confirm</button>
            </div>
        </div>
    </div>
</div>