@model SEA_Application.Models.AspNetLessonPlanBreakdownHeading

<script src="~/AdminLTE/selectone.js"></script>


<!DOCTYPE html>

<script>
    $(document).ready(function () {
        $("#BreakDownHeadingName").prop('required', true);
    });
</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <label>@Html.ActionLink("Home", "Dashboard", "Account") > <a href="#" class="sidebar-toggle navigate" data-toggle="offcanvas"><span style="background-color:#F7F7F7 !important">User</span></a> > <b><a href="#">Break Down Heading</a></b></label>
    <h4>Lesson Plan BreakDown Heading</h4>

    <div class="box box-primary">
        <div class="box-header with-border">
            
        </div>
        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Break Down Heading<span class="red-mark">*</span></b></label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.BreakDownHeadingName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BreakDownHeadingName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-danger" onclick="window.location.href = 'Index'">Cancel</button>
                        </div>
                    </div>
                </div>
            }

            
            </div>
        </div>
</body>
</html>
