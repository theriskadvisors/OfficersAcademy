@model IEnumerable<SEA_Application.Models.AspnetSubjectTopic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TeacherDashboardLayout.cshtml";
}

<br />
<h4 class="orange">&nbsp;View Topics &nbsp;</h4>



<div class="box box-primary">
    <div class="box-title"></div>

    <div class="box-body">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table" id="datatable">

            <thead>

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FAQ)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AspNetSubject.SubjectName)
                    </th>
                    <th></th>
                </tr>

            </thead>



            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FAQ)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AspNetSubject.SubjectName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

</div>

        <script>
            $(document).ready(function () {

                $('#datatable').dataTable({
                });

            })
        




        </script>
