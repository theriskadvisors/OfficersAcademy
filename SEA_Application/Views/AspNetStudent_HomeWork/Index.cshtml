@model IEnumerable<SEA_Application.Models.AspNetStudent_HomeWork>

@{
    ViewBag.Title = "Index";
}
<script>
    $(document).ready(function () {

        $('.table').on('click', 'tbody tr', function () {
            var td = $(this).children("td");
            var userName = $(td[0]).children("input").val();
            userName = userName.trim();

            window.location.href = "/AspNetStudent_HomeWork/Edit?id=" + userName;
        });

    });
</script>
<label>@Html.ActionLink("Home", "Dashboard", "Account") > <a href="#" class="sidebar-toggle navigate" data-toggle="offcanvas" style="background-color:#F7F7F7 !important">User</a> > @Html.ActionLink("Diary", "Index", "AspNetHomeworks") > <a href="#"><b>Edit Comments</b></a> </label>
<h4>Edit Comment</h4>

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUser.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUser.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reading)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherComments)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ParentComments)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetHomework.Date)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.Name)
                        <input type="hidden" value="@item.Id" />
                        <input type="hidden" id="hw" value="@item.HomeworkID" />

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reading)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherComments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentComments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetHomework.Date)

                    </td>
                </tr>
            }

        </table>
        <hr />
        <button onclick="window.location.href='/AspNetHomeworks/Index'" class="btn btn-primary pull-left">Back</button>
     
      
    </div>

</div>
