    function Remove(e) {
        var credit = 0;
        if ($("#zero").val() == "") {
            credit = "";
        }
        else {
            var creditvalue = parseInt(document.getElementById("credit" + e).value);
            if (isNaN(creditvalue)) {
                creditvalue = 0;
            }
            credit = parseInt($("#zero").val()) - creditvalue;
        }



        $("#zero").val(credit);

        document.getElementById(e).remove();
        row.splice(e, 1);

    }
