    function Remove(e) {


        arr.splice($.inArray(e, arr), 1);

        // alert(arr);
        var credit = 0;
        if ($("#zero").val() == "") {
            credit = "";
        }
        else {
            var creditvalue = parseInt(document.getElementById("credit" + e).value);
            if (isNaN(creditvalue)) {
