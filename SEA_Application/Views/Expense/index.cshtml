    function creditvalue() {
        $("#submit").prop("disabled", false);

        var sum = 0;
        var subdebit = $("#credit").val();
        if (subdebit == "") {
            subdebit = 0;
        }
        $(".cr").each(function () {
            if (!isNaN(this.value)) {
                sum += +$(this).val();
                $("#zero").val(sum);
                var total = parseInt(subdebit) + sum;
                $("#zero").html(total);
            }
        })

    }

