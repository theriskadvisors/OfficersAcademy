        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1" data-toggle="tab">Course Content</a></li>
                <li><a href="#tab_2" data-toggle="tab">OverView</a></li>
                <li><a href="#tab_3" data-toggle="tab">Reading Material</a></li>
                <li><a href="#tab_4" data-toggle="tab">Assignment</a></li>
                <li><a href="#tab_5" data-toggle="tab">Q/A</a></li>
            </ul>
        </div>

        <div class="tab-content" style="padding: 10px 0px 0px 0px; ">

            <div class="tab-pane active" id="tab_1">

                <div class="col-md-12">


                    <div id="TopicList" style=" margin: auto; ">


                        <h3 style="color:black">Course Content</h3>

                        <h3 style="float:right">Total Lessons &nbsp;&nbsp;<span id="TotalLessons"></span> </h3>


                        <br />
                    </div>

                </div>

            </div>


            <div class="tab-pane" id="tab_2">

                <h3>Description</h3>
                <p id="LessonDescription">

                </p>

            </div>

            <div class="tab-pane" id="tab_3">


                <div class="box" style="border:0">


                    <div class="box-body">
                        <div class="form-horizontal" id="AttachmentAndLinkTable">


                            @*<table id="Attachment" style="width:40%;">
                        </table>


                        <table id="LinksTable" style="width:40%;">
                        </table>*@



                        </div> <!--End of Form Horizontal-->


                    </div>
                </div>
            </div>

            <div class="tab-pane" id="tab_4">
                @*<table id="Assignment" style="width:40%;">
            </table>*@

                <div class="box" style="border:0">
                    <div class="box-title" style="border:0"></div>


                    <div class="box-body">
                        <div class="form-horizontal" id="Assignment">


                        </div>
                    </div>
                </div>







                <div class="form-group" id="TeacherComments">

                    <span class="col-md-2"> Teacher Comments  </span>

                    <div id="" class="col-md-6">
                        <textarea readonly id="TeacherComments" style="height:120px;width:80%">


                            </textarea>


                    </div>



                </div>




                <div class="col-md-12">

                    <div class="form-group">

                        <span class="col-md-2"> Submit your Assignment </span>

                        @*<i class="fa fa-paperclip" style="padding-left:80px"></i> Choose File
                        <input type="file" style="padding-left:80px" id="SubmitAssignment" name="SubmitAssignment">
                    </div>
                    <div class="col-md-offset-2 col-lg-offset-2" style="padding-left:80px">
                        <p class="help-block">Max. 32MB</p>
                    </div>*@
                        <div class="col-md-6">


                            <input type="file" class="btn btn-default" id="AssignmentSubmitButton" name="" value="Submit" />
                        </div>

                    </div>

                </div>


            </div>

            <div class="tab-pane" id="tab_5">


            </div>

        </div>


    </div>


</div>



      

<script>

    $(document).ready(function () {

        var LessonId = $("#LessonID").val();

        $.ajax({


            type: "POST",
            url: "/StudentCourses/GetLessonVideo",
            data: { "LessonID": LessonId },
            success: function (data) {

                debugger

                $("iframe").attr('src', data.LessonVideo);
                $("#LessonName").text(data.LessonName);
                $("#LessonDescription").text(data.LessonDescription);

            }


        })


        $.ajax({


            type: "POST",
            url: "/StudentCourses/ReadingMaterials",
            data: { "LessonID": LessonId },
            success: function (data) {

                debugger

                var Attachment = data.StuAttachment;
                var Links = data.StuLinks;
                $.each(Attachment, function (key, value1) {

                    debugger


                    var file = value1.AttachmentName.split('.').slice(0, -1).join('.');
                    //  $("#Attachment").append('<tr><td>Attachment Name </td>  <td>' + file + '</td></tr>');
                    //  $("#Attachment").append('<tr><td> Download Attach File  </td>  <td><a href ="/StudentCourses/DownloadFile/' + value1.AttachmentId + '">' + value1.AttachmentPath + '</a></td></tr>');


                    $("#AttachmentAndLinkTable").append('<div class="form-group"> <span class="col-md-2">Attachment Name</span >  <div class="col-md-6">' + file + '</div></div> ');

                    $("#AttachmentAndLinkTable").append('<div class="form-group"> <span class="col-md-2">Download Attach File</span > <div class="col-md-6"><a href ="/StudentCourses/DownloadFile/' + value1.AttachmentId + '">' + value1.AttachmentPath + '</div></div> ');
                })


                $.each(Links, function (key, value2) {

                    // $("#LinksTable").append('<tr><td>Link URL  </td>  <td><a href =' + value2.LinkUrl + ' target="_blank">' + value2.LinkUrl + '</a></td></tr>');

                    $("#AttachmentAndLinkTable").append('<div class="form-group"><span class="col-md-2">Link URL</span ><div class="col-md-6"><a href =' + value2.LinkUrl + ' target="_blank"> ' + value2.LinkUrl + '</a></div>');



                })



            }


        })

        $.ajax({

            type: "POST",
            url: "/StudentCourses/GetCourseContent",
            data: { "LessonID": LessonId },
            success: function (data) {


                $.each(data, function (key, value1) {

                    debugger

                    Count = value1.TotalLessons;

                    var lessonlist = value1.LessonList;


                    $("#TopicList").append('<div   class ="TopicsAndLesson TopicDiv" style="border:1px solid black"><b> ' + value1.TopicName + '</b> <b><span style ="float:right">' + value1.TotalLessons1 + '  Lesson </span></b></div>');

                    //  $("#TopicList").append('<div class="panel-group"> <div class="panel panel-default"> <div class="panel-heading"> <h4 class="panel-title"> <a data-toggle="collapse" href="#collapse1">Collapsible list group</a> </h4> </div> <div id="collapse1" class="panel-collapse collapse"> <ul class="list-group"> <li class="list-group-item">One</li> <li class="list-group-item">Two</li> <li class="list-group-item">Three</li> </ul> <div class="panel-footer">Footer</div> </div> </div> </div>');

                    $.each(lessonlist, function (key, lesson) {

                        $("#TopicList").append('<div   class ="TopicsAndLesson" style="border:1px solid black"><a href = "/StudentCourses/StudentLessons/' + lesson.LessonId + '">' + lesson.LessonName + '</a></div>');


                    })

                })

                $("#TotalLessons").text(Count);

            }
        })


        $.ajax({


            type: "POST",
            url: "/StudentCourses/StudentAssignment",
            data: { "LessonID": LessonId },
            success: function (data) {

                debugger
                //var value = new Date(parseInt(data.StudentAssignmentDueDate.replace(/(^.*\()|([+-].*$)/g, '')));
                //var dat = value.getMonth() +
                //    1 +
                //    "/" +
                //    value.getDate() +
                //    "/" +
                //    value.getFullYear();

                $("#Assignment").append('<div class="form-group"><span class="col-md-2">Assignment Name</span ><div class="col-md-6">' + data.StudentAssigmentName + ' </div>');

                $("#Assignment").append('<div class="form-group"><span class="col-md-2">Download Attach File</span ><div class="col-md-6"><a href ="/StudentCourses/DownloadFileOfAssignment/' + data.StudentAssignmentId + '">' + data.FileName + '</a></div> ');
                $("#Assignment").append('<div class="form-group"><span class="col-md-2">Assignment DueDate</span><div class="col-md-6">' + data.StudentAssignmentDueDate + ' </div></div>');

                //  $("#Assignment").append('<tr><td>Assignment Name </td>  <td>' + data.StudentAssigmentName + '</td></tr>');
                //  $("#Assignment").append('<tr><td> Download Attach File  </td>  <td><a href ="/StudentCourses/DownloadFileOfAssignment/' + data.StudentAssignmentId + '">' + data.StudentAssigmentName + '</a></td></tr>');
                // $("#Assignment").append('<tr><td>Assignment DueDate </td>  <td>' + data.StudentAssignmentDueDate + '</td></tr>');
                //$("#TeacherComments").text(data.TeacherComments);

            }

        })

        $("#AssignmentSubmitButton").click(function (evt) {
            var fileUpload = $("#SubmitAssignment").get(0).files;

            var data = new FormData();
            data.append('LessonID', LessonId);

            if (fileUpload.length > 0) {
                data.append("file", fileUpload[0]);
            }
            $.ajax({
                type: "POST",
                url: "/StudentCourses/StudentAssignmentSubmission",
                contentType: false,
                processData: false,
                data: data,
                success: function (message) {
                    alert(message);
                },
                error: function () {
                    alert("There was error uploading files!");
                }
            });
        });





    })

</script>
