@model IEnumerable<SEA_Application.Models.AspnetQuestion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TeacherDashboardLayout.cshtml";
}

<h2>&nbsp; Question/Answer</h2>

<div class="box box-primary">
    <div class="box-title"></div>

    <div class="box-body">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>


        <table class="table" id="datatable">
            <thead>

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                  
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                  
                    <th>
                        Lesson Name
                    </th>
                    <th>
                        Answer
                    </th>
                    <th>
                        Creation Date
                    </th>
                    @*<th></th>*@
                </tr>

            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.AspnetLesson.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AspnetOption.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationDate)
                        </td>
                        @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>*@
                    </tr>


                }

            </tbody>

        </table>

        </div>
    </div>
